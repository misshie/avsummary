# -*- coding: utf-8; mode: ruby; -*-

source do
  snv_dir "SNV"
  snv_vcf "snv500.vcf"
  snv_av  "snv500.av"
  indel_dir "INDEL"
  indel_vcf "indel500.vcf"
  indel_av "indel500.av"
  convert2annovar "/opt/annovar/convert2annovar.pl"
  annotate_variation "/opt/annovar/annotate_variation.pl"
  database_dir "/opt/annovar-humandb"
end

table "CytoBand" do
  type :snv, :indel
  mode :regionanno
  avopt "--buildver hg19 --dbtype cytoband"
end

